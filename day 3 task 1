bagalar=[]
y=0
M1=int(input(' 1-ші модуль бағалар енгізіңі(число не меньше 0 и не больше 100):'))
while M1<0 or M1>100:
    print('ошибка таких чисел нельзя добавить')
    M1 = int(input(' 1-ші модуль бағалар енгізіңі(число не меньше 0 и не больше 100):'))
M2=int(input('2-шімодуль бағалар енгізіңі(число не меньше 0 и не больше 100):'))
while M2<0 or M2>100:
    print('ошибка таких чисел нельзя добавить')
    M2 = int(input('2-шімодуль бағалар енгізіңі(число не меньше 0 и не больше 100):'))
Ex=int(input('экзамен бағалар енгізіңі(число не меньше 0 и не больше 100):'))
while Ex<0 or Ex>100:
    print('ошибка таких чисел нельзя добавить')
    Ex = int(input('экзамен бағалар енгізіңі(число не меньше 0 и не больше 100):'))
while True:
    x =int(input('Бағалар енгізіңі(число меньше 0 и больше 100 остановить ввод):'))
    if x<0 or x>100:
        print('ошибка таких чисел нельзя добавить')
        break
    else:
        bagalar.append(x)
    y+=1
mid=sum(bagalar)/y
prom=mid*0.4+(((M1+M2)/2)*0.2)
rate =prom+(Ex*0.4)
if rate<90:
    ex_above=(90-rate)+(rate-prom)
    if ex_above <=100 and ex_above>=0:
        print('баллы твоего экзамена должны быть выше:',ex_above)
    else:
        print('ничего тебе уже не поможеть')
else:
    print('твоя оценка хороша')
